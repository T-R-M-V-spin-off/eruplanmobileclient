<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Eruplan">

        <!-- StartupActivity Ã¨ il Launcher: deve essere exported="true" -->
        <activity
            android:name=".gestioneUtenteMobile.StartupBoundary"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Le altre activity sono interne: exported="false" per sicurezza -->
        <activity
            android:name=".gestioneUtenteMobile.LoginBoundary"
            android:exported="true">
        </activity>

        <activity
            android:name=".gestioneNucleoFamiliare.GestioneNucleoBoundary"
            android:exported="true">
        </activity>

        <activity
            android:name=".gestioneUtenteMobile.SignupBoundary"
            android:exported="true">
        </activity>

        <activity
            android:name=".gestioneNucleoFamiliare.AggiungiMembroBoundary"
            android:exported="true">
        </activity>

        <activity
            android:name=".gestioneNucleoFamiliare.CreaNucleoBoundary"
            android:exported="true">
        </activity>

        <activity
            android:name=".gestioneNucleoFamiliare.CosaVuoiFareBoundary"
            android:exported="true">
        </activity>

        <activity
            android:name=".gestioneNucleoFamiliare.InserisciAppoggioBoundary"
            android:exported="true"/>

        <activity android:name=".gestioneNucleoFamiliare.ListaRichiesteBoundary"
            android:exported="true"/>

        <activity
            android:name=".gestioneNucleoFamiliare.VisualizzaMembriBoundary"
            android:exported="true"/>

        <activity
            android:name=".gestioneNucleoFamiliare.VisualizzaNucleoBoundary"
            android:exported="true"/>

        <activity
            android:name=".gestioneNucleoFamiliare.VisualizzaNucleoUtenteBoundary"
            android:exported="true"/>

        <activity
            android:name=".gestioneNucleoFamiliare.ListaAppoggioBoundary"
            android:exported="true"/>

        <service
            android:name=".utility.EruplanMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>