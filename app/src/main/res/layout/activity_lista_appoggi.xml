<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista Appoggi"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/bg_rounded_red"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/appoggi_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_above="@id/add_appoggio_button"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:scrollbars="vertical"
        tools:listitem="@layout/item_appoggio" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_appoggio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aggiungi Appoggio"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"

        android:background="@drawable/bg_rounded_red"
        android:textColor="@android:color/white"/>

</RelativeLayout>