<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/via_piazza_civico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Via/Piazza, Civico"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comune_cap_provincia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/via_piazza_civico"
            android:text="Comune, CAP, Provincia" />

        <TextView
            android:id="@+id/regione_paese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comune_cap_provincia"
            android:text="Regione, Paese" />

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_delete" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>