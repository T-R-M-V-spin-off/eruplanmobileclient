<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".gestioneNucleoFamiliare.VisualizzaResidenzaBoundary">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dati della Residenza"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/viaPiazzaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Via/Piazza:"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/viaPiazzaTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/viaPiazzaLabel"
        app:layout_constraintBottom_toBottomOf="@id/viaPiazzaLabel"
        app:layout_constraintStart_toEndOf="@id/viaPiazzaLabel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/comuneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comune:"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/viaPiazzaLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/comuneTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/comuneLabel"
        app:layout_constraintBottom_toBottomOf="@id/comuneLabel"
        app:layout_constraintStart_toEndOf="@id/comuneLabel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/regioneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regione:"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/comuneLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/regioneTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/regioneLabel"
        app:layout_constraintBottom_toBottomOf="@id/regioneLabel"
        app:layout_constraintStart_toEndOf="@id/regioneLabel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/paeseLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paese:"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/regioneLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/paeseTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/paeseLabel"
        app:layout_constraintBottom_toBottomOf="@id/paeseLabel"
        app:layout_constraintStart_toEndOf="@id/paeseLabel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/civicoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Civico:"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/paeseLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/civicoTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/civicoLabel"
        app:layout_constraintBottom_toBottomOf="@id/civicoLabel"
        app:layout_constraintStart_toEndOf="@id/civicoLabel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/capLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAP:"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/civicoLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/capTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/capLabel"
        app:layout_constraintBottom_toBottomOf="@id/capLabel"
        app:layout_constraintStart_toEndOf="@id/capLabel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnChiudi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chiudi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
