<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp">

    <LinearLayout
        android:id="@+id/ll_membro_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_red"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_nome_cognome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_white"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginBottom="12dp"
            android:text="Nome e cognome"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_codice_fiscale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_white"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Codice fiscale"
            android:textColor="@color/black" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_delete_membro"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:src="@android:drawable/ic_delete"
        android:visibility="gone"
        android:contentDescription="Elimina membro" />
</RelativeLayout>